<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.keepnote">


    <!-- on en a besoin pour communiquer avec la caméra pour ajouter une image -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!-- on en a besoin pour l'alarme -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icone_todo_list"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icone_todo_list_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Notes"
        tools:targetApi="q">

        <activity
            android:name=".activities.CreateNoteActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:exported="true" />

        <activity
            android:name=".activities.SplashScreenActivity"
            android:exported="true"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- singletop est pour que l'activité ne puisse se lancer qu'une fois -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            >
        </activity>

        <receiver android:name=".database.AlarmBroadCast"/>
    </application>

</manifest>